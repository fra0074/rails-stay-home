<div class="list-event-group">
  <% if Date.today == locals[:date] %>
    <h3 class="title-event"><%= locals[:title] %> <span class="label-today"> 🙌 Today</span> </h3>
  <% elsif  %>
    <h3 class="title-event"><%= locals[:title] %> <span class="label-new"> ⭐ New</span> </h3>
  <% end %>
  <% if locals[:time].nil? == false   %>
    <p class="event-date">🗓️ <%= locals[:date]  %> - <%= locals[:time].strftime("%H:%M")  %> </p>
  <%else  %>
    <p class="event-date">🗓️ <%= locals[:date]  %> </p>
  <%end  %>
  <p class="event-name">👉 <%= locals[:topic] %> - <%= link_to locals[:user], locals[:user_link], target: "_blank" %> </p>
  <%if locals[:language] == "IT" %>
    <p class="event-lng">Lingua 🇮🇹</p>
  <%elsif locals[:language] == "EN"  %>
    <p class="event-lng">Lingua 🇬🇧</p>
  <%end  %>
  <p class="event-link">Registrati qui ➡️ <%= link_to locals[:label] ,locals[:event_link], target: "_blank" %></p>
</div>
